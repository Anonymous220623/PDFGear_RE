<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Syncfusion.UI.Xaml.Charts">
  <local:ChartColorModel x:Key="colorModel" x:Shared="false"/>
  <Style TargetType="{x:Type local:PieSeries3D}">
    <Setter Property="local:CircularSeriesBase3D.EnableSmartLabels" Value="true"/>
    <Setter Property="local:ChartSeriesBase.ColorModel" Value="{StaticResource colorModel}"/>
    <Setter Property="local:ChartSeriesBase.Palette" Value="Metro"/>
    <Setter Property="Control.Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:PieSeries3D}">
          <Border/>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style TargetType="{x:Type local:DoughnutSeries3D}">
    <Setter Property="local:CircularSeriesBase3D.EnableSmartLabels" Value="true"/>
    <Setter Property="local:ChartSeriesBase.Palette" Value="Metro"/>
  </Style>
  <Style TargetType="{x:Type local:ColumnSeries3D}"/>
  <Style TargetType="{x:Type local:BarSeries3D}"/>
  <Style TargetType="{x:Type local:StackingBarSeries3D}"/>
  <Style TargetType="{x:Type local:StackingBar100Series3D}"/>
  <Style TargetType="{x:Type local:StackingColumn100Series3D}"/>
  <Style TargetType="{x:Type local:StackingColumnSeries3D}"/>
  <Style TargetType="{x:Type local:LineSeries3D}"/>
  <Style TargetType="{x:Type local:ScatterSeries3D}"/>
  <Style TargetType="{x:Type local:AreaSeries3D}"/>
</ResourceDictionary>