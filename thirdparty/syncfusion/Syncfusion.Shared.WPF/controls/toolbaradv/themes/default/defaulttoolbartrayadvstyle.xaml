<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tools="clr-namespace:Syncfusion.Windows.Tools.Controls">
  <SolidColorBrush x:Key="TrayBackColor" Color="#FFF4F7FC"/>
  <Style x:Key="ToolBarTrayAdvStyle" TargetType="{x:Type tools:ToolBarTrayAdv}">
    <Setter Property="Control.Background" Value="{StaticResource TrayBackColor}"/>
  </Style>
  <Style BasedOn="{StaticResource ToolBarTrayAdvStyle}" TargetType="{x:Type tools:ToolBarTrayAdv}"/>
</ResourceDictionary>