<Window x:Class="PDFLauncher.GearForPDFScan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDFLauncher"
        xmlns:localprop="clr-namespace:PDFLauncher.Properties"
        ResizeMode="NoResize" Title="PDFgear" SizeToContent="Height" Width="460">
  <Grid Background="#EFF8FF">
    <Grid Margin="20">
      <Grid.RowDefinitions>
        <RowDefinition Height="24"/>
        <RowDefinition Height="16"/>
        <RowDefinition Height="24"/>
        <RowDefinition Height="16"/>
        <RowDefinition Height="36"/>
        <RowDefinition Height="16"/>
        <RowDefinition Height="18"/>
        <RowDefinition Height="16"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Image Source="/images/PDFScannerLog.png" Height="24" Width="24"/>
        <TextBlock Text="PDFgear Scan" Margin="8,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
      </StackPanel>
      <TextBlock Grid.Row="2" Text="{x:Static localprop:Resources.PDFScanWinTitle}" FontSize="16" LineHeight="24"
                 FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
      <TextBlock Grid.Row="4" Text="{x:Static localprop:Resources.PDFScanWinText1}" TextWrapping="Wrap"
                 HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
      <TextBlock Grid.Row="6" Text="{x:Static localprop:Resources.PDFScanWinText2}" TextWrapping="Wrap"
                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
      <Image Grid.Row="8" Source="/images/QRPDFScanner.png" Width="200" Height="200"/>
    </Grid>
  </Grid>
</Window>